<Window x:Class="Presentation.ManagerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:Presentation"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="469*"/>
            <ColumnDefinition Width="331*"/>
        </Grid.ColumnDefinitions>
        <TabControl Grid.ColumnSpan="2"  >
            <TabItem Header="Home" >
                <Grid>
                    <Grid.Background>
                        <ImageBrush ImageSource="" Stretch="UniformToFill"/>
                    </Grid.Background>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="20" />
                        <ColumnDefinition Width="99." />
                        <ColumnDefinition Width="11.322"/>
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition Width="20" />
                        <ColumnDefinition Width="85" />
                        <ColumnDefinition Width="90" />
                        <ColumnDefinition Width="20" />
                        <ColumnDefinition Width="150" />


                        <ColumnDefinition Width="20" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>


                        <RowDefinition Height="100"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="auto"/>

                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="30"/>

                    </Grid.RowDefinitions>

                    <Label Grid.Row="3" Grid.Column="1" Content="Cursist voornaam" Foreground="White" Grid.ColumnSpan="2" Margin="0,0,0,28" Grid.RowSpan="2"/>
                    <TextBox x:Name="voornaam" Grid.Row="4" Grid.Column="1" Margin="5,5,5,5" Background="#CCCCCC" Grid.ColumnSpan="2" />
                    <Label Grid.Row="5" Grid.Column="1" Content="Cursist achternaam" Foreground="White" Grid.ColumnSpan="2" Margin="0,0,0,28" Grid.RowSpan="2"/>
                    <TextBox x:Name="achternaam" Grid.Row="6" Grid.Column="1" Margin="5,5,5,5" Background="#CCCCCC" Grid.ColumnSpan="2" />
                    <Label Grid.Row="7" Grid.Column="1" Content="Cursist geslacht" Foreground="White" Grid.ColumnSpan="2" Margin="0,0,0,40" Grid.RowSpan="2"/>
                    <TextBox x:Name="geslacht" Grid.Row="8" Grid.Column="1" Margin="5,5,5,5" Background="#CCCCCC" Grid.ColumnSpan="2" />
                    <Button x:Name="inschrijven_cursist" Grid.Row="11" Grid.Column="1" Margin="5,5,5,5" 
                        Height="20" Content="Cursist Inschrijven" Grid.ColumnSpan="2"  />

                    <Label Grid.Row="3" Grid.Column="4" Content="Cursisten Lijst" Foreground="White" Grid.ColumnSpan="2" Margin="20,0,0,28" Grid.RowSpan="2" />

                    <ListView Grid.Row="4" Grid.Column="5" Grid.RowSpan="5" Margin="5,5,5,5" Name="CursistenList"
                              Grid.ColumnSpan="2" Background="#CCCCCC">

                    </ListView>
                    <Button x:Name="Cursisten_lijst" Grid.Row="11" Grid.Column="6" Margin="5,5,5,5" 
                        Height="20" Content="Lijst Updaten" />

                    <Label Grid.Row="3" Grid.Column="7" Content="Aanwezigheden table" Foreground="White" Grid.ColumnSpan="2" Margin="20,0,0,28" Grid.RowSpan="2"/>
                    <Label Grid.Row="4" Grid.Column="7" Content="Cursisten" Foreground="White" Grid.ColumnSpan="2" Margin="20,0,0,26" Grid.RowSpan="2"/>


                    <ListView Grid.Row="5" Grid.Column="8" Grid.RowSpan="7" Margin="5,5,5,5" Name="AanwezighedenList" Background="#CCCCCC">
                        <ListView.View>
                            <GridView>

                                <GridViewColumn Header="Select" Width="50">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <CheckBox IsChecked="{Binding IsSelected, Mode=TwoWay, RelativeSource={RelativeSource AncestorType=ListViewItem}}"
                                                 HorizontalAlignment="Center"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                            </GridView>
                        </ListView.View>
                    </ListView>

                    <Image Source="" Grid.Column="9" Grid.Row="1" Grid.RowSpan="3" Margin="9,0,4,26" />

                </Grid>
            </TabItem>
            <TabItem Header="Dansfilms/Evenementen">
                <Grid>
                    <Grid.Background>
                        <ImageBrush ImageSource="" Stretch="UniformToFill"/>
                    </Grid.Background>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="60"/>
                        <ColumnDefinition Width="70"/>
                        <ColumnDefinition Width="30"/>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="80"/>
                        <ColumnDefinition Width="70"/>
                        <ColumnDefinition Width="80"/>

                        <ColumnDefinition Width="20"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="20"/>
                        <RowDefinition Height="70"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="40"/>



                        <RowDefinition Height="20"/>
                    </Grid.RowDefinitions>

                    <Label Foreground="White" Grid.Row="2" Grid.Column="1" Content="Dansfilm links" />
                    <Label Foreground="White" Grid.Row="2" Grid.Column="5" Content="Evenementen" />
                    <ListView  Background="#CCCCCC" Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="1" Grid.RowSpan="6" Margin="0,0,-51,0"/>
                    <ListView Background="#CCCCCC" Grid.Row="3" Grid.Column="5" Grid.ColumnSpan="2" Grid.RowSpan="6" Margin="0,0,10,0"/>

                    <Button x:Name="addDanceMove" Content="ADD" Grid.Row="7" Grid.Column="3" Margin="5" />
                    <Button x:Name="DeleteDanceMove" Content="DELETE" Grid.Row="8" Grid.Column="3" Margin="5" />
                    <Button x:Name="AddEvent" Content="ADD" Grid.Row="6" Grid.Column="7" Margin="5" />
                    <Button x:Name="UpdateEvent" Content="UPDATE" Grid.Row="7" Grid.Column="7" Margin="5" />
                    <Button x:Name="DeleteEvent" Content="DELETE" Grid.Row="8" Grid.Column="7" Margin="5" />
                    <Image Source="" Grid.Column="8" Grid.Row="1" Grid.RowSpan="2"/>

                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
