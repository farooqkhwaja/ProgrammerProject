<Window x:Class="Presentation.ManagerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:Presentation"
        mc:Ignorable="d"
        Title="Salsa Dance school [Manager UI]" Height="450" Width="600" Closed="Window_Closed" >
    <Grid>

        <TabControl Grid.ColumnSpan="2" Visibility="Visible" >
            <TabItem Header="Home" >
                <Grid>
        
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="20" />
                        <ColumnDefinition Width="99." />
                        <ColumnDefinition Width="11.322"/>
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition Width="20" />
                        <ColumnDefinition Width="85" />
                        <ColumnDefinition Width="90" />
                        <ColumnDefinition Width="20" />
                        <ColumnDefinition Width="150" />
                        <ColumnDefinition Width="20" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>

                        <RowDefinition Height="100"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="30"/>
        
                    </Grid.RowDefinitions>
        
                    <Label Grid.Row="3" Grid.Column="1" Content="Cursist voornaam"  Grid.ColumnSpan="2" Margin="0,0,0,28" Grid.RowSpan="3"/>
                    <TextBox x:Name="voornaam" Grid.Row="5" Grid.Column="1" Margin="5"  Height="25" Background="#CCCCCC" Grid.ColumnSpan="2" FontSize="16" FontFamily="Arial Narrow"/>
                    <Label Grid.Row="6" Grid.Column="1" Content="Cursist achternaam"  Grid.ColumnSpan="2" Margin="0,0,0,28" Grid.RowSpan="2"/>
                    <TextBox x:Name="achternaam" Grid.Row="7" Grid.Column="1" Margin="5"  Height="25" Background="#CCCCCC" Grid.ColumnSpan="2" FontSize="18" FontFamily="Arial Narrow" />
                    <Label Grid.Row="7" Grid.Column="1" Content="Cursist geslacht"  Grid.ColumnSpan="2" Margin="0,41,0,40" Grid.RowSpan="3"/>
                    <TextBox x:Name="geslacht" Grid.Row="9" Grid.Column="1" Margin="5" Height="25"  Background="#CCCCCC" Grid.ColumnSpan="2" FontSize="18" FontFamily="Arial Narrow"/>
                    <Button x:Name="inschrijven_cursist" Grid.Row="11" Grid.Column="1" Margin="5,5,5,5"
                        Height="20" Content="Cursist Inschrijven" Click="inschrijven_cursist_Click" Grid.ColumnSpan="2" Grid.RowSpan="2"  />
        
                    <Label Grid.Row="3" Grid.Column="4" Content="Cursisten Lijst"  Grid.ColumnSpan="2" Margin="20,0,0,28" Grid.RowSpan="3" />
        
                    <ListView Grid.Row="5" Grid.Column="5" Grid.RowSpan="5" Margin="10" x:Name="CursistenList"  DataContextChanged="CursistenList_DataContextChanged"
                              Grid.ColumnSpan="2" Background="#CCCCCC">
        
                    </ListView>
                    <Button x:Name="Cursisten_lijst_updaten" Grid.Row="11" Grid.Column="6" Margin="5,5,5,5"
                        Height="20" Content="Lijst Updaten" Grid.RowSpan="2" Click="Cursisten_lijst_updaten_Click"/>
        
                    <Label Grid.Row="3" Grid.Column="7" Content="Aanwezigheden table"  Grid.ColumnSpan="2" Margin="20,0,0,28" Grid.RowSpan="3"/>
                    <Label Grid.Row="4" Grid.Column="7" Content="Cursisten"  Grid.ColumnSpan="2" Margin="20,10,0,8" Grid.RowSpan="2"/>


                    <ListView Grid.Row="6" Grid.Column="8" Grid.RowSpan="7" Margin="5,5,5,5" x:Name="AanwezighedenList" Background="#CCCCCC">
                        <ListView.View>
                            <GridView>

                                <GridViewColumn Header="Select" Width="50">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <CheckBox IsChecked="{Binding IsSelected, Mode=TwoWay, RelativeSource={RelativeSource AncestorType=ListViewItem}}"
                                                 HorizontalAlignment="Center"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </Grid>
            </TabItem>
            <TabItem Header="Dansfilms/Evenementen">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="60"/>
                        <ColumnDefinition Width="70"/>
                        <ColumnDefinition Width="30"/>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="80"/>
                        <ColumnDefinition Width="70"/>
                        <ColumnDefinition Width="80"/>
                        <ColumnDefinition Width="20"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="20"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="10"/>
                        <RowDefinition Height="35"/>
                        
     
        
                        <RowDefinition Height="20"/>
                    </Grid.RowDefinitions>
        
                    <Label Grid.Row="2" Grid.Column="1" Content="Dansfilm links" />
                    <Label Grid.Row="2" Grid.Column="5" Content="Evenementen" />
                    <ListView x:Name="DansFilmLinksList"  Background="#CCCCCC" Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="1"  Grid.RowSpan="6"  Margin="0,0,-51,0"/>
                    <ListView x:Name="EvenementenLinks" Background="#CCCCCC" Grid.Row="3" Grid.Column="5" Grid.ColumnSpan="2" Grid.RowSpan="6" Margin="0,0,10,0"/>
                    <TextBox Name="DansLinksToevoegenBox" Grid.Row="10" Grid.Column="1" Grid.ColumnSpan="2" Margin="3" FontSize="16" FontFamily="Arial Narrow" />
                    <TextBox Name="EvenementenToevoegenBox" Grid.Row="10" Grid.Column="5" Grid.ColumnSpan="2" Margin="3" FontSize="16" FontFamily="Arial Narrow" />
                    <Button x:Name="AddDanceLinks" Content="ADD" Grid.Row="7" Grid.Column="3" Margin="5"  Click="addDanceMove_Click" />
                    <Button x:Name="DeleteDanceMove" Content="DELETE" Grid.Row="8" Grid.Column="3" Margin="5" Click="DeleteDanceMove_Click" />
                    <Button x:Name="AddEvent" Content="ADD" Grid.Row="6" Grid.Column="7" Margin="5" Click="AddEvent_Click" />
                    <Button x:Name="UpdateEvent" Content="UPDATE" Grid.Row="7" Grid.Column="7" Margin="5" Click="UpdateEvent_Click" />
                    <Button x:Name="DeleteEvent" Content="DELETE" Grid.Row="8" Grid.Column="7" Margin="5" Click="DeleteEvent_Click" />
        
        
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
